{
  "name": "@nx-project/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "gen:lib": "nx g @nx/js:lib --directory=libs/ts --importPath=@nx-project --unitTestRunner=jest --bundler=tsc",
    "gen:shared-lib": "nx g @nx/js:lib --directory=libs/shared/ts --importPath=@nx-project/shared --unitTestRunner=jest --bundler=tsc",
    "gen:nest-app": "nx g @nx/nest:app --directory=apps",
    "gen:node-app": "nx g @nx/node:app --directory=apps",
    "build:all": "nx run-many --target=build --all",
    "test:all": "nx run-many --target=test --all",
    "lint:all": "nx run-many --target=lint --all",
    "build:libs": "nx run-many --target=build --projects=tag:type:lib",
    "build:apps": "nx run-many --target=build --projects=tag:type:app",
    "dev:gateway": "nx serve gateway",
    "dev": "nx serve",
    "test:watch": "nx test --watch",
    "test:cov": "nx test --coverage",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "affected:test": "nx affected --target=test",
    "affected:build": "nx affected --target=build",
    "graph": "nx graph",
    "dep-graph": "nx dep-graph",
    "clean": "nx reset",
    "clean:all": "nx reset && rm -rf node_modules dist"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "22.1.0",
    "@nx/eslint-plugin": "22.1.0",
    "@nx/jest": "22.1.0",
    "@nx/js": "22.1.0",
    "@nx/nest": "^22.1.0",
    "@nx/node": "22.1.0",
    "@nx/web": "22.1.0",
    "@nx/webpack": "22.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "^22.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "verdaccio": "^6.0.5",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "libs/ts/*",
    "libs/shared/ts/*",
    "libs/*"
  ],
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "axios": "^1.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "winston": "^3.18.3"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
