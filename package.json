{
  "name": "@nx-project/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "gen:lib": "nx g @nx/js:lib --directory=libs/ts --importPath=@nx-project --unitTestRunner=jest --bundler=tsc",
    "gen:shared-lib": "nx g @nx/js:lib --directory=libs/shared/ts --importPath=@nx-project/shared --unitTestRunner=jest --bundler=tsc",
    "gen:nest-app": "nx g @nx/nest:app --directory=apps",
    "gen:node-app": "nx g @nx/node:app --directory=apps",
    "build:all": "nx run-many --target=build --all",
    "test:all": "nx run-many --target=test --all",
    "lint:all": "nx run-many --target=lint --all",
    "build:libs": "nx run-many --target=build --projects=tag:type:lib",
    "build:apps": "nx run-many --target=build --projects=tag:type:app",
    "dev:gateway": "nx serve gateway",
    "dev": "nx serve",
    "test:watch": "nx test --watch",
    "test:cov": "nx test --coverage",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "affected:test": "nx affected --target=test",
    "affected:build": "nx affected --target=build",
    "graph": "nx graph",
    "dep-graph": "nx dep-graph",
    "clean": "nx reset",
    "clean:all": "nx reset && rm -rf node_modules dist",
    "init": "yarn install && nx reset",

    "docker:up": "cd .docker && docker-compose up -d",
    "docker:down": "cd .docker && docker-compose down",
    "docker:logs": "cd .docker && docker-compose logs -f",
    "docker:ps": "cd .docker && docker-compose ps",
    "docker:restart": "cd .docker && docker-compose restart",
    "docker:build": "cd .docker && docker-compose build",
    "docker:pull": "cd .docker && docker-compose pull",

    "docker:infra": "cd .docker && docker-compose up -d zookeeper kafka kafka-ui redis mongodb postgres-1 minio rabbitmq",
    "docker:infra:down": "cd .docker && docker-compose down zookeeper kafka kafka-ui redis mongodb postgres-1 minio rabbitmq",

    "go:file-engine:dev": "cd apps/file-engine && go run ./cmd/main.go",
    "go:file-engine:build": "cd apps/file-engine && go build -o bin/file-engine ./cmd/main.go",
    "go:worker-engine:dev": "cd apps/worker-engine && go run ./cmd/main.go",
    "go:worker-engine:build": "cd apps/worker-engine && go build -o bin/worker-engine ./cmd/main.go",
    "go:tidy": "go work sync && cd libs/golang/common && go mod tidy && cd ../minio-client && go mod tidy && cd ../image-processor && go mod tidy && cd ../rabbitmq-client && go mod tidy && cd ../../../apps/file-engine && go mod tidy && cd ../worker-engine && go mod tidy",
    
    "docker:file-engine": "cd .docker && docker-compose up -d --build file-engine",
    "docker:file-engine:logs": "cd .docker && docker-compose logs -f file-engine",
    "docker:worker-engine": "cd .docker && docker-compose up -d --build worker-engine",
    "docker:worker-engine:logs": "cd .docker && docker-compose logs -f worker-engine",
    "docker:rabbitmq:ui": "echo 'RabbitMQ UI: http://localhost:15672 (admin/admin123)'",

    "dev:file-service": "nx serve file-service",
    "dev:worker-service": "nx serve worker-service"
  },
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@nx/cypress": "22.1.3",
    "@nx/eslint": "22.1.0",
    "@nx/eslint-plugin": "22.1.0",
    "@nx/jest": "22.1.0",
    "@nx/js": "22.1.3",
    "@nx/nest": "^22.1.0",
    "@nx/next": "^22.1.3",
    "@nx/node": "22.1.0",
    "@nx/react": "^22.1.3",
    "@nx/vite": "^22.1.3",
    "@nx/vitest": "22.1.3",
    "@nx/web": "^22.1.3",
    "@nx/webpack": "22.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "ajv": "^8.0.0",
    "autoprefixer": "^10.4.22",
